
<main>
  <dev class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 cok-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= @user.errors.count%>error prohibited this obj from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <div>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
          </div>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <div>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <div>
            <%= f.text_area :introduction, autofocus:true, id:"user_introduction", placeholder:"自己紹介" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User" %>
        </div>
        <% end %>
      </div>
    </div>
  </dev>
</main>