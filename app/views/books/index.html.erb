<h1>Books</h1>
<% @books.each do |book| %>

  <p>Title: <%= link_to book_path(book.id) do %><%= book.title %><% end %></p>
  <p>Option: <%= book.body %></p>
<% end %>


<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>