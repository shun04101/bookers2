
<% if book.errors.any? %>
  <div id="error_explanation">
    <h2><%= book.errors.count%>errors prohibited this book from being saved:</h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>
<div class="row">
  <%= attachment_image_tag user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg" %>
</div>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
    <p><%= link_to "", edit_user_path(user), class:"btn btn-out line-secondary btn-block fas fa-user-cog" %></p>
</div>

<h2>New book</h2>
<%= form_with model: book, local:true do |f| %>
  <div>
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>