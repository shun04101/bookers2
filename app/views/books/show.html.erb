
<h1>Book detail</h1>
<p>
  <strong>Title:</strong>
  <%= link_to book_path(@book.id) do %>
    <%= @book.title %>
  <% end %>
</p>
<p>
  <strong>Body:</strong>
  <%= @book.body %>
</p>
<% if @book.user == current_user %>
  <%= link_to 'Edit', edit_user_path(@book) %>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>


<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>